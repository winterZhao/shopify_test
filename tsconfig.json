{
  "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "paths": {"*": ["node_modules/*", "src/types/*"], "@/*": ["src/*"]},
        "sourceMap": true
    },
    "include": ["src/**/*"]
}